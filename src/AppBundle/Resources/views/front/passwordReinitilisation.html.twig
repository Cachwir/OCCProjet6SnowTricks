{% extends 'AppBundle:front:layout.html.twig' %}

{% form_theme form 'AppBundle:forms:defaultFormTheme.html.twig' %}

{% block content_body %}

    <section class="slice color1 top-panel" id="contactSlice" >
        <div class="container">
            <div class="row mb40">
                <div class="span12">
                    <h1>Besoin de réinialiser votre mot de passe ?</h1>
                </div>
                <div id="contactSlide">
                    <div class="span12">

                        <div class="forgot-password-form">
                            {{ form_start(form) }}
                                {{ form_row(form.email) }}
                                {{ form_row(form.password) }}

                                <button type="submit" class="btn">Confirmer la réinitialisation</button>
                            {{ form_end(connectionForm) }}
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}

