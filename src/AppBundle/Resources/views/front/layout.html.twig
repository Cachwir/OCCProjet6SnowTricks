<script>
    jQuery(document).ready(function() {

        "use strict";

        var flashbags = {{ app.session.flashBag.all|json_encode()|raw }};

        for (var type in flashbags)
        {
            var bag = flashbags[type];
            var flash_message = "";

            for (var i = 0; i < bag.length; i++)
            {
                if (i != 0) {
                    flash_message += "<br>";
                }

                flash_message += bag[i];
            }

            if (flash_message) {
                displayFlash(type, flash_message);
            }
        }
    });
</script>

